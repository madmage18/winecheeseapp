<% layout('layouts/boilerplate')%>
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card-body">
                <h1 class="text-center">Update Wine and Cheese Makers</h1>
                <form class="validated-form" action="/makers/<%=maker._id%>?_method=PUT" method="POST" novalidate
                    enctype="multipart/form-data">
                    <div class="mb-3">
                        <label class="form-label" for="makername">Name of Maker</label>
                        <input class="form-control" type="text" id="makername" name="maker[makername]"
                            value="<%=maker.makername %>" required>
                        <div class="valid-feedback">Looks good!</div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="makertype">Cheese or Wine Maker</label>
                        <select class="form-select" aria-label="makertype" name="maker[makertype]" required>
                            <option value="<%=maker.makertype.toLowerCase()%>">
                                <%=maker.makertype%>
                            </option>
                            <%if(maker.makertype.toLowerCase()=='cheese maker' ){%>
                                <option value="wine maker">wine maker</option>
                                <%} else if (maker.makertype.toLowerCase()=='wine maker' ){%>
                                    <option value="cheese maker">cheese maker</option>
                                    <%} else{%>
                                        <option value="cheese maker">cheese maker</option>
                                        <option value="wine maker">wine maker</option>
                                        <%}%>
                                            <div class="valid-feedback">Looks good!</div>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="city">City</label>
                        <input class="form-control" placeholder="Sunnyside" type="text" id="city" name="maker[city]"
                            value="<%= maker.city%>" required>
                        <div class="valid-feedback">Looks good!</div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="state">State</label>
                        <input class="form-control" placeholder="New Jersey" type="text" id="state" name="maker[state]"
                            value="<%= maker.state%>" required>
                        <div class="valid-feedback">Looks good!</div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="products">Products</label>
                        <input class="form-control" placeholder="ex) Chocolate Milk, Cheddar Cheese, Havarti..."
                            type="text" id="products" name="maker[products]" value="<%= maker.products%>" required>
                        <div class="valid-feedback">Looks good!</div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="image">Add Images</label>
                        <input type="file" name="image" multiple>

                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="description">Description</label>
                        <textarea class="form-control" type="text" id="description" name="maker[description]"
                            required><%=maker.description%></textarea>
                        <div class="valid-feedback">Looks good!</div>
                        <!-- no value attribute for textarea -->
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="website">Website</label>
                        <input class="form-control" type="text" id="website" name="maker[website]"
                            value="<%= maker.website%>" required>
                        <div class="valid-feedback">Looks good!</div>
                    </div>
                    <div class="mb-3">
                        <% maker.images.forEach(function(img,i) { %>
                            <img src="<%=img.thumbnail %>" class="img-thumbnail" alt="">
                            <div class="form-check-inline">
                                <input type="checkbox" id="image-<%=i%>" name="deleteImages[]"
                                    value="<%=img.filename%>">
                                <label for="image-<%=i%>">Delete?</label>
                            </div>
                            <% }) %>
                    </div>
                    <button class="btn btn-success">Update the Maker</button>
                </form>
            </div>
        </div>
    </div>